package ua.nure.lytovchenko.task2.part2;

import java.util.Iterator;
import java.util.NoSuchElementException;

public class ListImpl implements List<Object> {
    protected Node head;
    protected Node current;
    protected int length;


    @Override
    public void addFirst(Object element) {
        if (head == null) {
            head = new Node(element);
        } else {
            Node tempNode = head;
            head = new Node(element);
            head.next = tempNode;
            tempNode.prev = head;
        }
        length++;
    }

    @Override
    public void addLast(Object element) {
        if (head == null) {
            head = new Node(element);
        } else {
            current = head;
            while (current.next != null) {
                current = current.next;
            }
            current.next = new Node(element);
            current.next.prev = current;
        }
        length++;
    }

    @Override
    public void removeFirst() {
        if (head.next == null) {
            head = null;
            return;
        }
        head = head.next;
        head.prev = null;
        length--;
    }

    @Override
    public void removeLast() {
        if (head.next == null) {
            head = null;
            return;
        }
        current = head;
        while (current.next.next != null) {
            current = current.next;
        }
        current.next = null;
        length--;
    }

    @Override
    public Object getFirst() {
        return head;
    }

    @Override
    public Object getLast() {
        current = head;
        while (current.next != null) {
            current = current.next;
        }
        return current;
    }

    @Override
    public Object search(Object element) {
        current = head;

        if (element == null) {
            return null;
        }
        while (current != null) {
            if (current.data.equals(element.toString())) {
                return current;
            }
            current = current.next;
        }
        return null;
    }

    @Override
    public boolean remove(Object element) {
        element = String.valueOf(element);
        current = head;
        if (head.data.equals(element)) {
            removeFirst();
            length--;
            return true;
        }
        while (current != null) {
            if (current.data.equals(element)) {
                if (current.next == null) {
                    removeLast();
                    return true;
                }
                current.prev.next = current.next;
                length--;
                return true;
            }
            current = current.next;
        }
        return false;
    }

    @Override
    public void clear() {
        head = null;
        length = 0;
    }

    @Override
    public int size() {
        return length;
    }

    @Override
    public String toString() {
        StringBuilder sb = new StringBuilder();
        sb.append("[");
        current = head;
        while (current != null) {
            sb.append(current.data.toString()).append(", ");
            current = current.next;
        }
        return (sb.length() != 1) ? (sb.toString().substring(0, sb.length() - 2) + "]") : "[]";
    }

    @Override
    public Iterator<Object> iterator() {
        return new IteratorImpl();
    }

    class IteratorImpl implements Iterator<Object> {
        private Node currentNode;
        private boolean removed = true;

        @Override
        public boolean hasNext() {
            if (head != null && currentNode == null) {
                return true;
            } else {
                return currentNode.next != null;
            }
        }

        @Override
        public Object next() {
            if (!hasNext()) {
                throw new NoSuchElementException();
            }
            if (currentNode == null) {
                currentNode = head;
            } else {
                currentNode = currentNode.next;
            }
            removed = false;
            return currentNode;
        }

        @Override
        public void remove() {
            if (removed) {
                throw new IllegalStateException();
            }
            if (currentNode == head) {
                removeFirst();
            } else if (currentNode.next == null) {
                removeLast();
            } else {
                currentNode.prev = currentNode.next;
                length--;
            }
            removed = true;
        }
    }

    protected static class Node {

        public Node next;
        public Node prev;
        public Object data;

        public Node() {

        }

        public Node(Object data) {
            this.data = String.valueOf(data);
        }

        @Override
        public String toString() {
            return data.toString();
        }


    }


}
